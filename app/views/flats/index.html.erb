  <%= render 'components/navbar' %>
  <h1 class="title">All of our flats</h1>
    <div class="cards">
      <% @flats.each do |f| %>
        <div class="card-trip">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
            <div>
              <h5 class="flat-name"> <%= f.name %></h5>
              <p class="flat-address"><%= f.address %></p>
            </div>

          <div class="card-trip-infos">
              <h2 class="guests"><p>people <%= f.number_of_guests %></p></h2>
               <h2 class="card-trip-pricing"><p>â‚¬<%= f.price_per_night %></p></h2>

          </div>
          <div class="links">
              <p><%= link_to "More info", flat_path(f)%></p>
              <p><%= link_to "Edit", edit_flat_path(f), class: "orange" %></p>
              <p><%= link_to "Remove", flats_path(f), class: "red" %></p>
          </div>
        </div>
      <% end %>
    </div>


